<div class="blog-comment" style="padding: 4rem;">
  <h3>Add a comment</h3>
  <%= form_for [@post, @comment] do |f| %>
      <div class="form-group">
        <%= f.label :body, class: 'sr-only' %>
        <%= f.text_field :body, class: 'form-control', placeholder: "Enter a new comment" %>
      </div>
      <div style="display: flex;">
      <div class="form-group" style="flex: 1;">
        <%= f.label :name, class: 'sr-only' %>
        <%= f.text_field :name, class: 'form-control', placeholder: "Enter your name" %>
      </div>
      <div class="form-group" style="padding-left: 2rem; flex: 1;">
        <%= f.label :email, class: 'sr-only' %>
        <%= f.text_field :email, class: 'form-control', placeholder: "Enter your e-mail" %>
      </div>
      </div>
      <%= f.submit "Submit Comment", class: 'btn btn-default pull-right' %>
  <% end %>
</div>