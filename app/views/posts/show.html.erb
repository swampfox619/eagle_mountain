<% content_for :head do %>
    <%= tag :meta, property: "fb:app_id",       content: 537088133324977 %>
    <%= tag :meta, property: "og:url",         content: "http://www.eaglemountaindigital.com/#{@post.permalink}" %>
    <%= tag :meta, property: "og:type",        content: "article" %>
    <%= tag :meta, property: "og:title",     content: "#{@post.title}" %>
    <%= tag :meta, property: "og:description",  content: "#{@post.meta_description}" %>
    <%= tag :meta, property: "og:image",       content: "http://www.eaglemountaindigital.com/assets/em_star_logo.png" %>
<% end %>
<div class="blog-index">
  <div class="blog">
    <div class="blog-latest">
      <h1><%= @post.title %></h1>
      <h3>Author: Lew Vine | <%= @post.created_at.strftime("%B %e, %Y") %></h3>
      <!-- Facebook Like and Share Button-->
      <div class="fb-like" data-href="http://www.eaglemountaindigital.com/<%= @post.permalink.to_s %>" data-width="50" data-layout="standard" data-action="like" data-size="small" data-show-faces="true" data-share="true"></div>
      <div><%= raw(@post.body) %></div>
    </div>
    <div class="blog-list">
      <div class="header">
        <h2>The Eagle Mountain Blog:</h2>
        <p>Answering the most common questions small business owner's ask about the online world and their business</p>
        <% if current_user %>
        <div>
          <%= link_to 'New Post', new_post_path, class: 'btn btn-primary' %>
        </div>
        <% end %>
      </div>
      <h2>You might also be interested in: </h2>
      <% @posts.each do |post| %>
        <%= link_to(post) do %>
          <h3><%= post.title %></h3>
        <% end %>
        <p><%= post.meta_description %></p>
      <% end %>
    </div>
  </div>
</div>